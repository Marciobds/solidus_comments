<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= I18n.t('spree.new_comment_type') %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= link_to_with_icon 'icon-arrow-left', I18n.t('spree.back_to_comment_types_list'), admin_comment_types_path, class: 'btn btn-primary' %>
  </li>
<% end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @comment_type } %>

<%= form_for(:comment_type, :url => collection_url) do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>
    <div data-hook="buttons" class="filter-actions actions">
      <%= button_tag I18n.t('spree.create'), class: 'fa fa-icon-ok button' %>
    </div>
  </fieldset>
<% end %>
